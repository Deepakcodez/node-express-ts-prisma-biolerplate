generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    // binaryTargets = ["native", "debian-openssl-1.1.x"]     for c panel   
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    firstName String?
    lastName  String?
    isActive  Boolean  @default(true)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
